{% macro nowList(nowItems, detailPrefix = false) %}
{% set cloudinaryParams = 'c_fill,g_auto:faces,h_200,w_600/q_auto:eco' %}
<ul class="now-list" role="list">
    {% for nowItem in nowItems | getList %}
    <li class="now-item">
        {% if nowItem.image %}
            {% set nowItemImage = 'https://res.cloudinary.com/chriskirknielsen/image/fetch/' + cloudinaryParams + '/' + (nowItem.image | urlencode) %}
            <img src="{{ nowItemImage | url }}" alt="" aria-hidden="true" class="now-item-image" width="600" height="200">
        {% endif %}
        <p class="now-item-content">
            {% if nowItem.link %}<a href="{{ nowItem.link | url }}">{% endif %}
                <strong>{{ nowItem.title }}
                {% if nowItem.detail %}({% if detailPrefix %}{{ detailPrefix }}&nbsp;{% endif %}{{ nowItem.detail }}){% endif %}</strong>
            {% if nowItem.link %}</a>{% endif %}
            {% if nowItem.blurb %}<br>{{ nowItem.blurb | safe }}{% endif %}
        </p>
    </li>
    {% endfor %}
</ul>
{% endmacro %}

{%- mdsafe -%}
{% for nowKey, nowData in nowInfo %}
    {%- if now[nowKey] -%}
        <h2>{{ nowData.heading }} {{ nowData.emoji }}</h2>
        {{ nowList(now[nowKey], nowData.detail or false) -}}
    {%- endif -%}
{%- endfor -%}
{%- endmdsafe -%}