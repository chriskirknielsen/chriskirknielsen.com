---
title: Now
subtitle: What am I doing these days?
permalink: /now/
layout: layouts/page.njk
section: now
bigboiCta: { url: "https://nownownow.com/about", label: "What this is", icon: "question" }
templateEngineOverride: njk, md
nowInfo: {
    home: { heading: "Living", emoji: "🏠" },
    music: { heading: "Listening", emoji: "🎧" },
    sport: { heading: "Training", emoji: "🏃‍♂️" },
    show: { heading: "Watching", emoji: "📺", detail: "Season" },
    book: { heading: "Reading", emoji: "📚" },
    game: { heading: "Playing", emoji: "🎮" },
}
---

{% macro nowList(nowItems, marker, detailPrefix = false) %}
<ul class="now-list" style="--marker:'{{ marker }}'">
    {% for nowItem in nowItems | getList %}
    <li>
        {% if nowItem.link %}<a href="{{ nowItem.link | url }}">{% endif %}
            <strong>{{ nowItem.title }}
            {% if nowItem.detail %}({% if detailPrefix %}{{ detailPrefix }} {% endif %}{{ nowItem.detail }}){% endif %}</strong>
        {% if nowItem.link %}</a>{% endif %}
        {% if nowItem.blurb %}<br>{{ nowItem.blurb | safe }}{% endif %}
    </li>
    {% endfor %}
</ul>
{% endmacro %}

{%- mdsafe -%}
{% for nowKey, nowData in nowInfo %}
    {% if now[nowKey] %}
        <h2>{{ nowData.heading }}</h2>
        {{ nowList(now[nowKey], nowData.emoji, nowData.detail or false) }}
    {% endif %}
{% endfor %}
{%- endmdsafe -%}