---
title: Now
subtitle: What am I doing these days?
permalink: /now/
layout: layouts/page.njk
section: now
bigboiButton: { url: "https://nownownow.com/about", label: "What this is", icon: "question" }
templateEngineOverride: njk, md
---

{% mdsafe %}
{% if now.home %}
<h2>Living</h2>
<ul class="now-list" style="--marker:'🏠'">
    <li>
        <strong>{{ now.home.title }}
        {% if now.home.detail %}({{ now.home.detail }}){% endif %}</strong>
        {% if now.home.blurb %}<br>{{ now.home.blurb | safe }}{% endif %}
    </li>
</ul>
{% endif %}

{% if now.book %}
<h2>Reading</h2>
{% set bookList = now.book | getList %}
<ul class="now-list" style="--marker:'📚'">
    {% for nowBook in bookList %}
    <li>
        {% if nowBook.link %}<a href="{{ nowBook.link | url }}">{% endif %}
            <strong>{{ nowBook.title }}
            {% if nowBook.detail %}({{ nowBook.detail }}){% endif %}</strong>
        {% if nowBook.link %}</a>{% endif %}
        {% if nowBook.blurb %}<br>{{ nowBook.blurb | safe }}{% endif %}
    </li>
    {% endfor %}
</ul>
{% endif %}

{% if now.game %}
<h2>Gaming</h2>
{% set gameList = now.game | getList %}
<ul class="now-list" style="--marker:'🕹️'">
    {% for nowGame in gameList %}
    <li>
        {% if nowGame.link %}<a href="{{ nowGame.link | url }}">{% endif %}
            <strong>{{ nowGame.title }}
            {% if nowGame.detail %}({{ nowGame.detail }}){% endif %}</strong>
        {% if nowGame.link %}</a>{% endif %}
        {% if nowGame.blurb %}<br>{{ nowGame.blurb | safe }}{% endif %}
    </li>
    {% endfor %}
</ul>
{% endif %}

{% if now.show %}
<h2>Watching</h2>
{% set showList = now.show | getList %}
<ul class="now-list" style="--marker:'📺'">
    {% for nowShow in showList %}
    <li>
        {% if nowShow.link %}<a href="{{ nowShow.link | url }}">{% endif %}
            <strong>{{ nowShow.title }}
            {% if nowShow.detail %}(Season {{ nowShow.detail }}){% endif %}</strong>
        {% if nowShow.link %}</a>{% endif %}
        {% if nowShow.blurb %}<br>{{ nowShow.blurb | safe }}{% endif %}
    </li>
    {% endfor %}
</ul>
{% endif %}

{% if now.show %}
<h2>Listening</h2>
{% set musicList = now.music | getList %}
<ul class="now-list" style="--marker:'🎧'">
    {% for nowMusic in musicList %}
    <li>
        {% if nowMusic.link %}<a href="{{ nowMusic.link | url }}">{% endif %}
            <strong>{{ nowMusic.title }}
            {% if nowMusic.detail %}({{ nowMusic.detail }}){% endif %}</strong>
        {% if nowMusic.link %}</a>{% endif %}
        {% if nowMusic.blurb %}<br>{{ nowMusic.blurb | safe }}{% endif %}
    </li>
    {% endfor %}
</ul>
{% endif %}
{% endmdsafe %}