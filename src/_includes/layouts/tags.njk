---
pagination:
  data: collections
  size: 1
  alias: tag
  addAllPagesToCollections: true
  filter: systemtags
layout: layouts/base.njk
permalink: /{{ localeRoot }}tags/{{ tag }}/
eleventyComputed:
  title: "{{ 'tagged' | i18n }} {{ 'grammar.quoteOpen' | i18n }}{{ tag }}{{ 'grammar.quoteClose' | i18n }}"
---

<header class="bigboi | content-breakout">
	<div class="bigboi-inner | container" style="--flow-space: var(--size-m)">
		<h1>{{ title }}</h1>
  </div>
</header>

{% set postslist = collections[ tag ] | locale %}
{% include "components/postslist.njk" %}