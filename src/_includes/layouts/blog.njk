---
section: blog
---

{% extends "layouts/base.njk" %}

{% block layoutContent %}
	{% set postslist = collections["post_" + lang] %}

	<header class="bigboi | content-fullbleed container">
		<div class="bigboi-inner | content | flow" style="--flow-space: var(--size-m)">
			<div class="spaced-items inlined-items" style="--spaced-items-justify:space-between">
				<h1>{{ title }}</h1>

				<a href="{{ '/rss.xml' | locale_url }}" class="button">
					{% svg "rss", { class: 'inline-icon' } %}
					<span>{{ 'rss.feed' | i18n }}</span>
				</a>
			</div>
			
			<p class="u-fontWeight-bold">{{ subtitle }}</p>
		</div>
	</header>

	{{ layoutContent | safe }}

	{% include "components/postslist.njk" %}
{% endblock %}