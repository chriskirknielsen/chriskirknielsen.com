---
layout: layouts/base.njk
templateName: page
---

<header class="bigboi | content-breakout">
	<div class="bigboi-inner | container" style="--flow-space: var(--size-m)">
		<h1>{{ pageTitle or title }}</h1>
		
		<p class="u-fontWeight-bold">{{ subtitle }}</p>

		{% if backlink %}
		<p class="u-marginBlockStart-m">
			<a href="{{ backlink.url | url }}" class="button" data-backlink>
				{% set svgArrowBackOpts = { class: "inline-icon" } %}
				{% include "assets/svg/arrow-back.svg.njk" %}
				{{ backlink.label }}
			</a>
		</p>
		{% endif %}
    </div>
</header>

<div class="flow fluid">
	{{ layoutContent | safe }}
</div>