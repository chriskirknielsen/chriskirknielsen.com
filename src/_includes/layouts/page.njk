---
templateName: page
---

{% extends "layouts/base.njk" %}

{% block layoutContent %}
	<header class="bigboi | content-fullbleed container">
		<div class="bigboi-inner | content | {% if bigboiButton %}flow{% endif %}" style="--flow-space: var(--size-m)">
			{% if bigboiButton %}<div class="spaced-items inlined-items" style="--spaced-items-justify:space-between">{% endif %}
				<h1>{{ (pageTitle or title) | safe }}</h1>

				{% if bigboiButton %}
					{% component "button", {
						url: bigboiButton.url | url,
						label: bigboiButton.label,
						icon: bigboiButton.icon or false,
						iconBefore: bigboiButton.iconBefore or false
					} %}
				{% endif %}
			{% if bigboiButton %}</div>{% endif %}
			
			<p class="u-fontWeight-bold">{{ subtitle }}</p>

			{% if backlink %}
			<p class="u-marginBlockStart-m">
				{% component "button", {
					url: backlink.url | url,
					linkAttr: 'data-backlink',
					label: backlink.label,
					icon: 'arrow-back',
					iconBefore: true
				} %}
			</p>
			{% endif %}
		</div>
	</header>

	<div class="page-content | content-fullbleed container | flow fluid">
		{{ layoutContent | safe }}
	</div>
{% endblock %}
