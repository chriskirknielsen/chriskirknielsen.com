<header class="header">
    <div class="container">
        <div class="header-inner">
            <a href="{{ '/' | locale_url | url }}" class="header-logo">
                {% svg "logo", { title: ('nav.home' | i18n) } %}
            </a>

            <nav class="header-nav" aria-label="{{ 'nav.label' | i18n }}">
                <ul class="header-menu menu" role="list">
                    <li class="menu-item">
                        <a href="{{ '/blog/' | locale_url | url }}" class="menu-link">{{ 'nav.blog' | i18n }}</a>
                    </li>
                    <li class="menu-item">
                        <a href="{{ '/about/' | locale_url | url }}" class="menu-link">{{ 'nav.about' | i18n }}</a>
                    </li>
                    <li class="menu-item">
                        <a href="{{ '/designs/' | url }}" class="menu-link">{{ 'nav.designs' | i18n }}</a>
                    </li>
                </ul>
            </nav>
            
            {% include "components/themepicker-toggler.njk" %}
        </div>
    </div>
</header>