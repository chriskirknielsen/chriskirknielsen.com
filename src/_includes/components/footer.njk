<footer class="footer">
    <div class="container">
        <div class="footer-inner | content-wide | fluid">
            <div class="footer-logo">
                <svg width="73" height="76" viewBox="0 0 73 76" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <defs><radialGradient id="logo-ie-grad"><stop offset="0" stop-color="#84e7fc" /><stop offset="1" stop-color="#0f75bd" /></radialGradient></defs>
                    <path d="M63.9793 48.1956L72.2873 56.3044C72.7436 56.7498 73 57.3539 73 57.9838V71.25C73 73.8733 70.8211 76 68.1333 76H29.2C13.0733 76 0 63.2401 0 47.5V28.5C0 12.7599 13.0733 0 29.2 0H68.1333C70.821 0 73 2.12667 73 4.75V18.0162C73 18.6461 72.7436 19.2502 72.2872 19.6956L63.9793 27.8044C63.5229 28.2498 62.904 28.5 62.2587 28.5H55.9666C54.6227 28.5 53.5333 27.4367 53.5333 26.125V19H29.2C23.8244 19 19.4667 23.2533 19.4667 28.5V47.5C19.4667 52.7467 23.8244 57 29.2 57H53.5333V49.875C53.5333 48.5633 54.6227 47.5 55.9666 47.5H62.2587C62.9041 47.5 63.523 47.7502 63.9793 48.1956H63.9793Z"/>
                </svg>
            </div>

            <p class="footer-note">
                {% set copyrightYear = (metadata.currentYear
                    if metadata.copyrightStart == metadata.currentYear
                    else metadata.copyrightStart + "&ndash;" + metadata.currentYear
                ) | safe %}
                <strong>{{ metadata.author.name }}</strong>

                &copy;&nbsp;{{ copyrightYear }}
            </p>

            <p class="footer-edit">
                <a href="{{ metadata.repo }}/blob/main/{{ page.inputPath }}">{{ 'fixErrorPR' | i18n }}</a>
            </p>

            <nav aria-labelledby="footer-extras-links-title" class="footer-nav" data-footer-nav="extras">
                <h2 class="h4" id="footer-extras-links-title">{{ 'footerAdditionalLinks' | i18n }}</h2>
                <ul>
                    <li><a href="{{ '/acknowledgements/' | locale_url }}">{{ 'nav.acknowledgements' | i18n }}</a></li>
                    <li><a href="{{ '/fonts/' | url }}">{{ 'customFonts' | i18n }}</a></li>
                </ul>
            </nav>

            <nav aria-labelledby="footer-language-links-title" class="footer-nav" data-footer-nav="lang">
                <h2 class="h4" id="footer-language-links-title">{{ 'langLabel' | i18n }}</h2>
                <ul>
                {% for locale, langName in metadata.locales %}
                    <li><a href="{{ '/' | locale_url(locale) }}" hreflang="{{ locale }}">{{ langName }}</a></li>
                {% endfor %}
                </ul>
            </nav>

            <nav aria-labelledby="footer-external-links-title" class="footer-nav" data-footer-nav="external">
                <h2 class="h4" id="footer-external-links-title">{{ 'externalLinks' | i18n | safe }}</h2>

                <ul>
                    <li><a href="{{ localeRssUrl }}" aria-label="{{ 'rss.subscribe' | i18n }}">RSS</a></li>
                {% for social in social %}
                    <li><a href="{{ social.url | url }}">{{ social.name }}</a></li>
                {% endfor %}
                </ul>
            </nav>
        </div>
    </div>
</footer>