<toggling-expander class="custom-element custom-element--passthrough">
    <details class="expander" data-expander="wrapper">
        <summary class="cta expander-cta | u-width100" style="--btn-justify-content:center" data-expander="trigger">
            {% svg "question", { class: "inline-icon" } %}
            <span>{{ 'page.randomFacts' | i18n }}</span>
        </summary>

        <div class="expander-content | u-textAlign-center" data-expander="content">
            <ul data-facts class="u-textAlign-start" data-expander="content-items">
            {% for emoji, fact in facts %}
                <li data-item-emoji="{{ emoji }}" {% if ('Konami' in fact) %}class="nojs-hidden"{% endif %}>{{ fact }}</li>
            {% endfor %}
            </ul>
        </div>
    </details>
</toggling-expander>