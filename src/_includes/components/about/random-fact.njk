<details class="about-facts | expander">
    <summary class="about-fact-get | cta expander-cta | u-width100" style="--btn-justify-content:center">
        {% svg "question", { class: "about-facts-icon inline-icon" } %}
        <span class="about-facts-label">{{ 'page.randomFacts' | i18n }}</span>
    </summary>

    <div class="about-fact-show | expander-content | u-textAlign-center">
        <ul data-facts class="u-textAlign-left">
        {% for emoji, fact in facts %}
            <li data-fact-emoji="{{ emoji }}" {% if ('Konami' in fact) %}class="nojs-hidden"{% endif %}>{{ fact }}</li>
        {% endfor %}
        </ul>
    </div>
</details>